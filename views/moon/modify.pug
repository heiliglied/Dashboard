extends ../layout2

block addhead
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel='stylesheet' href='http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.7/summernote.css')
    style(type="text/css").
        .sbutton {
            margin: 10px;
        }

block content    
    div(style='height: 30px')
    form(name='modify_form' method='post' action='/moon/update')
        input(type='hidden' name='_csrf' value=csrfToken)
        input(type='hidden' name='_id' value=content._id)
        div(class='content_box')
            div(class='subject_line')
                input(class='text_box' name='name' placeholder='작성자' value=content.name)
            div(style='height: 30px')
            div(class='subject_line')
                input(class='text_box' name='subject' placeholder='제목을 입력해주삼.' value=content.subject)
            div(style='height: 30px')
            div(class='contents')
                textarea(id='content' name='content') #{content.content}
            div(style='text-align: center;')
                button(type='submit' class='sbutton') 수정
                button(type='button' class='sbutton' onclick="location.href='/moon/list'") 리스트 

block addscript
    script(src='http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.7/summernote.js')
    script(src='/js/moon_scripts.js')