extends ../layout2

block content
    div.container.mt-5
        div.mt-5(style='text-align: center;')
            div(class='col-lg-12')
                div(id="page-wrapper")
                    div(class='row')
                        div(class='col-lg-12')
                            h1(class='page-header' style='text-align: left;') MOON 게시판
                    div(class='row')
                        div(class='col-lg-12')
                            div(class='panel panel-default')
                                div(class='panel-heading' style='text-align: left;') Board
                                div(class='panel-body')
                                    table(width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example")
                                        thead
                                            tr
                                                th Num
                                                th Name
                                                th Subject
                                                th Regist Date
                                        for datas in lists
                                            tr(style='cursor: pointer;' onclick="location.href='/moon/view/" + datas.number + "'")
                                                td= datas.number
                                                td #{datas.name}
                                                td= datas.subject
                                                td= datas.created

                                    div(style='width: 100%; text-align: right;')
                                        button(type='button' onclick="location.href='/moon/write'") 글쓰기