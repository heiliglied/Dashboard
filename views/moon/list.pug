extends ../layout2

block content
    section
        div.container.mt-5
            div.mt-5(style='text-align: center;')
                div(class='col-lg-12')
                    div(id="page-wrapper")
                        div(class='row')
                            div(class='col-lg-12')
                                h1(class='page-header' style='text-align: left;') MOON 게시판
                        div(class='row')
                            div(class='col-lg-12')
                                div(class='panel panel-default')
                                    div(class='panel-heading' style='text-align: left;') Board
                                    div(class='panel-body')
                                        div(class="navbar-form navbar-right" role="search")
                                        form(name='search_form' method='get' role="search" action='/moon/list')
                                            div(class="navbar-form navbar-right")
                                                input(type='hidden' name='page' value=page)
                                                div(class="form-group navbar-right" style="margin-right: 0px")
                                                    input(name='key' class="form-control" type="text" placeholder="Search")
                                                    | 
                                                    button(class="btn btn-default" type="submit") Submit
                                            table(width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example")
                                                thead
                                                    tr
                                                        th Num
                                                        th Name
                                                        th Subject
                                                        th Regist Date
                                                for datas in lists
                                                    tr(style='cursor: pointer;' onclick="location.href='/moon/view/" + datas.number + "'")
                                                        td= datas.number
                                                        td #{datas.name}
                                                        td= datas.subject
                                                        td= datas.created

                                            nav
                                                ul(class="pagination") !{page}
                                            div(style='width: 100%; text-align: right;')
                                                button(type='button' onclick="location.href='/moon/write'") 글쓰기
